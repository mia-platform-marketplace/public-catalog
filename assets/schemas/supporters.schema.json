{
  "$id": "supporters.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "supporters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string" },
          "images": { 
            "type": "array",
            "items": { "type": "string" }
           }
        },
        "additionalProperties": false,
        "required": ["label", "images"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["supporters"]
}
