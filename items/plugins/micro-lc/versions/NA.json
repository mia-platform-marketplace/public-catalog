{
  "$schema": "../../manifest.schema.json",
  "name": "micro-lc",
  "itemId": "micro-lc",
  "tenantId": "mia-platform",
  "visibility": {
    "public": true
  },
  "description": "micro-lc enables you to create applications composed by micro-frontends integrated at runtime.",
  "type": "plugin",
  "image": {
    "localPath": "../../assets/microlc-plugin-transparent.png"
  },
  "supportedByImage": {
    "localPath": "../../../../../assets/img/mia-platform-logo-2023.png"
  },
  "supportedBy": "Mia-Platform",
  "categoryId": "microfrontend",
  "documentation": {
    "type": "externalLink",
    "url": "https://micro-lc.io"
  },
  "repositoryUrl": "https://github.com/micro-lc/micro-lc",
  "releaseStage": "deprecated",
  "resources": {
    "services": {
      "micro-lc": {
        "type": "plugin",
        "name": "micro-lc",
        "description": "micro-lc enables you to create applications composed by micro-frontends integrated at runtime.",
        "dockerImage": "nexus.mia-platform.eu/microlc/micro-lc:2.4.2",
        "defaultEnvironmentVariables": [
          {
            "name": "HTTP_PORT",
            "value": "8080",
            "valueType": "plain"
          }
        ],
        "defaultResources": {
          "cpuLimits": {
            "max": "50m",
            "min": "30m"
          },
          "memoryLimits": {
            "max": "50Mi",
            "min": "30Mi"
          }
        },
        "defaultProbes": {
          "liveness": {
            "path": ""
          },
          "readiness": {
            "path": ""
          }
        },
        "defaultLogParser": "mia-nginx",
        "defaultDocumentationPath": "",
        "containerPorts": [
          {
            "name": "http",
            "from": 80,
            "to": 8080
          }
        ]
      }
    }
  }
}