    "pino-pretty": "^13.0.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@stylistic/eslint-plugin-ts": "^4.4.0",
    "@types/json-diff": "^1.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.30",
    "@types/semver": "^7.7.0",
