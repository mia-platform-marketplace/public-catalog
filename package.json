{
  "name": "public-catalog",
  "description": "Collection of manifests composing Mia-Platform public catalog.",
  "version": "0.5.6",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Mia Platform Core Team <core@mia-platform.eu>",
  "scripts": {
    "sync-crd": "tsx scripts/sync-crd.ts",
    "build:script": "tsx scripts/build-script.ts",
    "dev": "tsx --env-file=./.dev/local.env src/index.ts",
    "start": "node build/index.cjs",
    "test": "node --import=tsx --test 'tests/**/*.test.ts'",
    "test:snapshot": "node --import=tsx --test --test-update-snapshots 'tests/**/*.test.ts'",
    "lint": "eslint .",
    "check:items": "tsx --no-warnings scripts/check-items.ts",
    "check:types": "tsc --noEmit --skipLibCheck",
    "check:license": "addlicense -c 'Mia srl' -check -s scripts/**/*.ts src/**/*.ts"
  },
  "dependencies": {
    "@mia-platform/console-types": "^0.37.6",
