{
  "name": "public-catalog",
  "description": "Collection of manifests composing Mia-Platform public catalog.",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.8.0",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Mia Platform Core Team <core@mia-platform.eu>",
  "scripts": {
    "build:manifest-schemas": "tsx scripts/build-manifest-schemas.ts",
    "build:script": "tsx scripts/build-script.ts",
    "build": "yarn build:manifest-schemas && yarn build:script",
    "dev": "tsx --env-file=./.dev/local.env src/index.ts",
    "start": "node build/index.cjs",
    "test": "node --import=tsx --test 'tests/**/*.test.ts'",
    "test:snapshot": "node --import=tsx --test --test-update-snapshots 'tests/**/*.test.ts'",
    "lint": "eslint .",
    "check:items": "tsx --no-warnings scripts/check-items.ts",
    "check:types": "tsc --noEmit --skipLibCheck",
    "check:license": "addlicense -c 'Mia srl' -check -s items/**/*.js scripts/**/*.ts src/**/*.ts"
  },
  "dependencies": {
    "@mia-platform/console-types": "^0.33.4",
    "env-schema": "^6.0.1",
    "json-diff": "^1.0.6",
    "mongodb": "^6.15.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@types/json-diff": "^1.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.14",
    "@types/semver": "^7.7.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-import-resolver-typescript": "^4.2.7",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "eslint-visitor-keys": "^4.2.0",
    "file-type": "^20.4.1",
    "json-schema-to-ts": "^3.1.1",
    "jsonpath-plus": "^10.3.0",
    "listr2": "^8.2.5",
    "lodash-es": "^4.17.21",
    "nock": "^14.0.2",
    "rimraf": "^6.0.1",
    "semver": "^7.7.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "engines": {
    "node": ">=v23"
  }
}
