{
  "name": "public-catalog",
  "description": "Collection of manifests composing Mia-Platform public catalog.",
  "version": "0.7.5",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.10.3",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Mia Platform Core Team <core@mia-platform.eu>",
  "scripts": {
    "sync-manifest-schemas": "tsx scripts/sync-manifest-schemas.ts",
    "build:script": "tsx scripts/build-script.ts",
    "dev": "tsx --env-file=./.dev/local.env src/index.ts",
    "start": "node build/index.cjs",
    "test": "node --import=tsx --test 'tests/**/*.test.ts'",
    "test:snapshot": "node --import=tsx --test --test-update-snapshots 'tests/**/*.test.ts'",
    "lint": "eslint .",
    "check:items": "tsx --no-warnings scripts/check-items.ts",
    "check:types": "tsc --noEmit --skipLibCheck",
    "check:license": "addlicense -c 'Mia srl' -check -s scripts/**/*.ts src/**/*.ts"
  },
  "dependencies": {
    "@mia-platform/console-types": "^0.39.4",
    "env-schema": "^6.1.0",
    "json-diff": "^1.0.6",
    "mongodb": "^6.20.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/json-diff": "^1.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.9.0",
    "@types/semver": "^7.7.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "eslint-visitor-keys": "^4.2.1",
    "file-type": "^21.0.0",
    "json-schema-to-ts": "^3.1.1",
    "jsonpath-plus": "^10.3.0",
    "listr2": "^9.0.5",
    "lodash-es": "^4.17.21",
    "nock": "^14.0.10",
    "rimraf": "^6.0.1",
    "semver": "^7.7.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "resolutions": {
    "json-schema-to-ts": "^3.1.1"
  },
  "engines": {
    "node": ">=v24"
  }
}
